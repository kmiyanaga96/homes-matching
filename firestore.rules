rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Members collection
    match /members/{memberId} {
      // Anyone can read members
      allow read: if true;
      // Anyone can create/update (password verification is done in app)
      allow write: if true;
    }

    // Notices collection
    match /notices/{noticeId} {
      // Anyone can read notices
      allow read: if true;
      // Anyone can write (admin auth not implemented yet)
      allow write: if true;
    }
  }
}
